.swiper-tab {
  width: 100%;
  display: flex;
  background: #fff;
}
.swiper-tab .swiper-tab-item {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  position: relative;
}
.order-itembox {
  width: 100%;
}
.swiper-box {
  width: 100%;
}
.swiper-item{
  width: 100%; 
}
.order-item{
  width: 100%;
}




.swiper-tab  .active {
  color: red;

}
.swiper-tab  .active::after{
  display:block;
  content:'';
  width:100%;
  height:6rpx;
  background:red;
  position:absolute;
  bottom:0;
}
