<!-- index.wxml -->
<view class="firstPage">
  
  <scroll-view scroll-x="true" class="firstPage-top">
    <view class="top" wx:for="{{list}}" wx:key="{{index}}">{{item.name}}</view>
  </scroll-view>

  <swiper class="swiper-container" horizontal="true"
  indicator-dots="true" indicator-active-color="green"
   autoplay="true" interval="3000" duration="800">
    <block wx:for="{{msgList}}" wx:key="{{index}}">
      <navigator>
        <swiper-item>
          <image class="slide-image" src="{{item.url}}" />
          <view class="swiper-title">{{item.title}}</view>
        </swiper-item>
      </navigator>
    </block>
  </swiper>
  <view class="firstPage-match"></view>
  <view class="firstPage-news"></view>
</view>