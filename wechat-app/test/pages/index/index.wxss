.firstPage{
  width: 100%;
  height: 100%;
}
.search{
  display: inline-block;
  vertical-align: center;
  width: 100%;
}
.input-father{
  position: relative;
  height: 60rpx;
  margin-left: 15px;
  margin-top: 5px;
  margin-right: 15px;
  border: 1rpx solid rgb(117, 214, 122);
  background-color: rgb(241, 237, 237);
  border-radius: 4px;
}
.fangdajing{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  left: 12rpx;
  top: 10rpx;
}
.input{
  position: relative;
  text-align: left;
  height: 60rpx;
  left: 70rpx;
  width: 560rpx;
}
.clear{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 10rpx;
  top: 10rpx;
}
.hide{
  display: none;
}
.firstPage-top{
  height: 68rpx;
  width: 100%;
  overflow-x: scroll;
  white-space: nowrap;
}
.top{
  display: inline-block;
  width: 10%;
  text-align: center;
  font-size: 30rpx;
  line-height: 63rpx;
  overflow-x: scroll;
  margin: 0 20rpx 0 20rpx;
  border: 1px solid #fff;
}
.on{
  font-size: 34rpx;
  color: rgb(51, 219, 65);
  border-bottom: 5rpx solid rgb(117, 214, 122);
}
.swiper-container {
  height: 400rpx;
  width: 100%;
  position: relative;
  }
  image{
    height: 400rpx;
    width: 100%;
  }
  .swiper-title {
    position: absolute;
    bottom: 40rpx;
    left: 40rpx;
    right: 40rpx;
    font-size: 30rpx;
    color: white;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
.space{
  width: 100%;
  height: 15rpx;
  background-color: rgb(10, 10, 10);
}

.firstPage-match{
  width: 100%;
  height: 180rpx;
  background-color: #fff;
  position: relative;
}
.match-container{
  margin: 0 20rpx 0 20rpx;
  height: 100%;
  display: flex;
}
.left-team{
  width: 200rpx;
}
.match-infor{
  flex: 1;
}
.right-team{
  width: 200rpx;
}



